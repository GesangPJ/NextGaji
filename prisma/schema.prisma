datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int       @id @default(autoincrement())
  npwp           Int
  nik            Int
  status_akun    String    @default("AKTIF")
  name           String?
  email          String    @unique
  password       String
  userType       String?   @default("KARYAWAN")
  accounts       Account[]
  sessions       Session[]
  alamat         String?
  telepon        Int?
  tanggungan     Int?       @default(0)
  gajipokok      Int
  jabatan        String?
  jeniskelamin   String

  gajiAsKaryawan  Gaji[]   @relation("GajiKaryawan")
}

model Pph21 {
  id             Int       @id @default(autoincrement())
  nama_pph21     String?
  nilai_pph21    Float?

}

model Ptkp {
  id            Int     @id @default(autoincrement())
  nama_ptkp     String?
  nilai_ptkp    Float?

}

model Bpjs {
  id            Int     @id @default(autoincrement())
  bpjskes_perusahaan Float?
  bpjsjht_perusahaan Float?
  bpjsjkk_perusahaan Float?
  bpjsjkm_perusahaan Float?
  bpjsjp_perusahaan Float?
  bpjskes_peg   Float?
  bpjsjht_peg   Float?
  bpjsjp_peg    Float?

}

model Tunjangan {
  id            Int     @id @default(autoincrement())
  tunjangan_lainnya   Int?  @default(0)
  tunjangan_internet  Int?   @default(0)
  tunjangan_makan     Int?   @default(0)
  tunjangan_transport Int?   @default(0)
}

model Gaji {
  id            Int       @id @default(autoincrement())
  userId        Int
  dibuat        DateTime  @default(now())
  diubah        DateTime
  periode       String
  gaji_pokok     Int
  tunjangan_lainnya Int?     @default(0)
  tunjangan_transport Int?   @default(0)
  tunjangan_internet  Int?   @default(0)
  tunjangan_makan     Int?   @default(0)
  bpjskes_perusahaan Float?     @default(0)
  bpjsjht_perusahaan Float?     @default(0)
  bpjsjkk_perusahaan Float?     @default(0)
  bpjsjkm_perusahaan Float?     @default(0)
  bpjsjp_perusahaan Float?     @default(0)
  gaji_gross    Int
  bpjskes_peg   Float?     @default(0)
  bpjsjht_peg   Float?     @default(0)
  bpjsjp_peg    Float?     @default(0)
  gaji_bersih_bulanan Int
  gaji_bersih_tahunan Int
  ptkp_karyawan Int?
  pph21_bulanan Int?
  pph21_tahunan Int?
  gaji_diterima Int?
  keterangan String?

  user          User      @relation("GajiKaryawan", fields:[userId], references: [id])
}


model Account {
  id                Int       @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User      @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int       @id @default(autoincrement())
  sessionToken String    @unique
  userId       Int
  expires      DateTime

  user         User      @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String    @unique
  expires    DateTime

  @@unique([identifier, token])
}


